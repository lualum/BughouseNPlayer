{
   "extends": "../tsconfig.json",
   "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "module": "ES2022",
      "moduleResolution": "node",
      "lib": [
         "ES2022"
      ],
      "composite": true,
      "baseUrl": ".",
      "paths": {
         "../shared/*": [
            "../shared/dist/*"
         ]
      }
   },
   "references": [
      {
         "path": "../shared"
      }
   ],
   "include": [
      "./**/*.ts"
   ],
   "exclude": [
      "dist",
      "node_modules"
   ]
}